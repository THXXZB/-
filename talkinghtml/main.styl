link_color = #3377aa
border_color = #eaeaea

*
    margin 0
    padding 0
a
    text-decoration: none
    color: link_color
    cursor pointer
    &:visited
        color #666699
    &:hover
        color: #fff
        background link_color
    
table
    border-collapse: collapse
    border: none 
    padding 0
    margin 0

body
    font-size 12px
    font-family sans-serif
    line-height 1.62em
    color #111

#billboard
    width 300px
    margin-bottom 50px
    h2
        color #111
        padding-bottom: 10px
        border-bottom: 1px solid border_color
        font-size: 16px
        margin-bottom 12px
        line-height: 150%
        span 
            font-size 13px
            margin-left 12px
    td
        padding 7px 0
        border-bottom 1px solid border_color
        // &:first-child//æˆ–&:(1)
        //     background-color #abe
        &:nth-child(2n+1)
            // background-color #aaa
            width 20px
            font-size: 9px
            text-align center
        &.title
            width 290px


